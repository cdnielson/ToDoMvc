@model ToDoMvc.Models.ToDo

@{
    ViewBag.Title = "Delete";
}

<!DOCTYPE html>

<html>
<head>
    <title>Delete</title>
</head>
<body>
    <h3>Are you sure you want to delete this?</h3>
    <fieldset>
        <legend>To Do Item</legend>
        <table class="table-condensed table-striped">
            <thead>
                <tr>
                    <th class="display-label" style="padding-right: 30px;">Item</th>
                    <th class="display-label">Completed</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="display-field"  style="padding-right: 30px;">
                        @Html.DisplayFor(model => model.Item)
                    </td>
                    <td class="display-field">
                        @Html.DisplayFor(model => model.Completed)
                    </td>
                </tr>

            </tbody>
        </table>

    </fieldset>
    @using (Html.BeginForm())
    {
        <p>
            <input type="submit" value="Delete" /> |
            @Html.ActionLink("Back to List", "Index")
        </p>
    }

</body>
</html>
