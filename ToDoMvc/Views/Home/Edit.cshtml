@model ToDoMvc.Models.ToDo

@{
    ViewBag.Title = "Edit";
}

<!DOCTYPE html>

<html>
<head>
    <title>Edit</title>
</head>
<body>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>Edit To Do Item</legend>

            @Html.HiddenFor(model => model.Id)
            <table class="table-condensed table-striped">
                <thead>
                <tr>
                    <th class="editor-label">
                        @Html.LabelFor(model => model.Item)
                    </th>
                    <th class="editor-label">
                        @Html.LabelFor(model => model.Completed)
                    </th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td class="editor-field">
                        @Html.EditorFor(model => model.Item)
                        @Html.ValidationMessageFor(model => model.Item)
                    </td>
                    <td class="editor-field">
                        @Html.EditorFor(model => model.Completed)
                        @Html.ValidationMessageFor(model => model.Completed)
                    </td>
                </tr>
                </tbody>
            </table>
            <p>
                <input type="submit" value="Save" />
            </p>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
